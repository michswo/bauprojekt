import Layout from '../layouts/no_teaser.astro';
import CollapsibleCard from "../components/CollapsibleCard.astro";
---

<Layout>
    <div class="card-section dark">
        <div class="container" slot="head">
            <h1>Arbeiten bei uns</h1>
            <p>Echt zu empfehlen. text text text text text text text text text text text text text text text text text text
                text text text text text text text text text text text text text text
                text text text text text text text text text text text text text text text text text text text text text</p>
        </div>

    </div>
    <div class="card-section light">
        <div class="container">
            <h2>Stellenausschreibungen</h2>

            <CollapsibleCard title="Bauleiter (m/w/d)">
                <p>css pseudo elemente machen mich traurig, ich mag nicht mehr.</p>
                <p>aber guck, ausklappbare karten, wenigstens was</p>
            </CollapsibleCard>

